@model devarts.Models.Reproduction

<div class="modal-dialog">
    <div class="modal-content">
        @using (Ajax.BeginForm("AddReproduction", "Reproduction", new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "patientList",
            LoadingElementId = "loader",
            OnSuccess = "OnSuccessOperations()",
        }, new { Id = "AddReproductionForm" }))
        {           
            @Html.AntiForgeryToken()

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title" id="myModalLabel">
                    <i class="fa fa-paw"></i> Dodawanie
                    <small>cieczki / rui</small>
                </h3>
            </div>
            <div class="modal-body">
                @*<div class="row">
                        <div class="col-lg-12">
                            @Html.ValidationSummary()
                        </div>
                    </div>*@
                <div class="row">
                    <div class="col-lg-12 form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DogName, htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-9">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-pencil fa" aria-hidden="true"></i></span>
                                    @Html.DropDownListFor(m => Model.DogName, new SelectList(@ViewBag.BitchesList, "Value", "Text"), new { @class = "form-control" })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.DogName)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.FatherName, htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.FatherName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FatherName)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.EstrusStartDate, htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.EstrusStartDate, "{0:yyyy.MM.dd HH:mm}", new { @Value = "", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.EstrusStartDate)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.MatingDate_First, htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.MatingDate_First, "{0:yyyy.MM.dd HH:mm}", new { @Value = "", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MatingDate_First)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-lg-12">
                        <input class="btn btn-danger" type="submit" value="Zapisz">
                        <a href="#" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close"></i> Zamknij</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript">
    (function ($) {
        $.validator.unobtrusive.adapters.addBool("checkboxrequired", "required");
    }(jQuery));
</script>