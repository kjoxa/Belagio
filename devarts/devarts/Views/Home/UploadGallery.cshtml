@model PagedList.IPagedList<devarts.Models.GalleryModels>
@using PagedList.Mvc;

@*<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>*@
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<style>
    .btn:focus, .btn:active, button:focus, button:active {
        outline: none !important;
        box-shadow: none !important;
    }

    #image-gallery .modal-footer {
        display: block !important;
    }

    .thumb {
        margin-top: 15px !important;
        margin-bottom: 15px !important;
    }

    .modal-header .close {
        margin-top: -27px;
    }

    .close {
        float: right;
        font-size: 30px;
        font-weight: bold;
        line-height: 1;
        color: #000;
        text-shadow: 0 1px 0 #fff;
        filter: alpha(opacity=20);
        opacity: 1.2;
    }

    .thumbnail {
        max-height: 100% !important;
        width: 100%;
    }

    .modal-footer {
        padding: 19px 20px 20px;
        margin-top: 15px;
        text-align: right;
        border-top: none;
    }
</style>

<script>
    let modalId = $('#image-gallery');

    $(document)
        .ready(function () {

            loadGallery(true, 'a.thumbnail');

            //This function disables buttons when needed
            function disableButtons(counter_max, counter_current) {
                $('#show-previous-image, #show-next-image')
                    .show();
                if (counter_max === counter_current) {
                    $('#show-next-image')
                        .hide();
                } else if (counter_current === 1) {
                    $('#show-previous-image')
                        .hide();
                }
            }


            function loadGallery(setIDs, setClickAttr) {
                let current_image,
                    selector,
                    counter = 0;

                $('#show-next-image, #show-previous-image')
                    .click(function () {
                        if ($(this)
                            .attr('id') === 'show-previous-image') {
                            current_image--;
                        } else {
                            current_image++;
                        }

                        selector = $('[data-image-id="' + current_image + '"]');
                        updateGallery(selector);
                    });

                function updateGallery(selector) {
                    let $sel = selector;
                    current_image = $sel.data('image-id');
                    $('#image-gallery-title')
                        .text($sel.data('title'));
                    $('#image-gallery-image')
                        .attr('src', $sel.data('image'));
                    disableButtons(counter, $sel.data('image-id'));
                }

                if (setIDs == true) {
                    $('[data-image-id]')
                        .each(function () {
                            counter++;
                            $(this)
                                .attr('data-image-id', counter);
                        });
                }
                $(setClickAttr)
                    .on('click', function () {
                        updateGallery($(this));
                    });
            }
        });

    // build key actions
    $(document)
        .keydown(function (e) {
            switch (e.which) {
                case 37: // left
                    if ((modalId.data('bs.modal') || {})._isShown && $('#show-previous-image').is(":visible")) {
                        $('#show-previous-image')
                            .click();
                    }
                    break;

                case 39: // right
                    if ((modalId.data('bs.modal') || {})._isShown && $('#show-next-image').is(":visible")) {
                        $('#show-next-image')
                            .click();
                    }
                    break;

                default:
                    return; // exit this handler for other keys
            }
            e.preventDefault(); // prevent the default action (scroll / move caret)
        });

</script>

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">                
                <h2 class="text-center orange"><i class="fa fa-picture-o"></i><i class="fa fa-2x fa-picture-o"></i><i class="fa fa-3x fa-picture-o"></i></h2>
                <h2 class="intro-text text-center">
                    Galeria <strong>Super Charty</strong>
                </h2>                
                <hr>
            </div>
            <div class="col-sm-12 text-center">
                <hr />
                <span class="label label-lg label-default">
                    STRONA / <span class="under_flat">PAGE </span>&nbsp; @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)  OF  @Model.PageCount
                </span>
                @Html.PagedListPager(Model, page => Url.Action("UploadGallery", new { page }))
            </div>
        </div>
    </div>

    <div class="row">
        <div class="box">

            @{
                int i = 0;
            }
            @foreach (var item in Model)
            {
                if (i == 3)
                {
                    <div class="row">
                        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                            <a class="thumbnail" href="#" data-image-id="@item.Id" data-toggle="modal" data-title="@Html.Raw(item.Title)"
                               data-image="@item.ImgUrl"
                               data-target="#image-gallery">
                                <img class="img-thumbnail"
                                     src="@item.ImgUrl"
                                     alt="@Html.Raw(item.Title)">
                            </a>
                        </div>
                    </div>
                    i = 0;
                }
                else
                {
                    i++;
                    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                        <a class="thumbnail" href="#" data-image-id="@item.Id" data-toggle="modal" data-title="@Html.Raw(item.Title)"
                           data-image="@item.ImgUrl"
                           data-target="#image-gallery">
                            <img class="img-thumbnail"
                                 src="@item.ImgUrl"
                                 alt="@Html.Raw(item.Title)">
                        </a>
                    </div>
                }

            }
        </div>

        <div class="modal fade" id="image-gallery" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="image-gallery-title"></h4>
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <div class="col-lg-1">
                            <button type="button" class="btn btn-secondary float-left" id="show-previous-image">
                                <i class="fa fa-2x fa-arrow-left"></i>
                            </button>
                        </div>
                        <div class="col-lg-10">
                            <img id="image-gallery-image" class="img-responsive col-md-12" src="">
                        </div>
                        <div class="col-lg-1">
                            <button type="button" id="show-next-image" class="btn btn-secondary float-left">
                                <i class="fa fa-2x fa-arrow-right"></i>
                            </button>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div class="col-lg-12 text-center">
                            <p>
                                <hr />
                                Aby zobaczyć kolejne zdjęcia, kliknij następny numer strony.<br />
                                Takie rozwiązanie zapobiega powolnemu ładowaniu się wielu zdjęć.
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>



    </div>
    <div class="row">
        <div class="box">
            <div class="col-sm-12 text-center">
                <hr />
                <span class="label label-lg label-default">
                    STRONA / <span class="under_flat">PAGE</span>&nbsp; @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)  OF  @Model.PageCount
                </span>
                @Html.PagedListPager(Model, page => Url.Action("UploadGallery", new { page }))
            </div>
        </div>
    </div>
</div>

